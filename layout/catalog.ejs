<div class="catalog-container">
  <%- partial('_partial/header') %>
  <hr class="header-hr" />

  <div class="catalog-sub-container">
    <% if (site.categories.length){ %>
    <h3 class="catalog"><i>Categories:</i></h3>
    <ul class="category-list">
      <% site.categories.sort('name').each(function(item){ %> <%
      if(item.posts.length){ %>
      <li class="category-list-item">
        <a href="<%- config.root %><%- item.path %>" title="<%= item.name %>"
          ><%= item.name %><sup>[<%= item.posts.length %>]</sup></a
        >
      </li>
      <% } %> <% }); %>
    </ul>
    <% } %>
  </div>

  <div class="catalog-sub-container2">
    <% if (site.tags.length){ %>
    <h3 class="catalog"><i>Tags:</i></h3>
    <ul class="tag-list">
      <% site.tags.sort('name').each(function(item){ %> <%
      if(item.posts.length){ %>
      <li class="tag-list-item">
        <a href="<%- config.root %><%- item.path %>" title="<%= item.name %>"
          ><%= item.name %><sup>[<%= item.posts.length %>]</sup></a
        >
      </li>
      <% } %> <% }); %>
    </ul>
    <% } %>
  </div>
</div>
